<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/parking_map" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <Button android:id="@+id/patio1Button" android:text="Patio 1"/>
        <Button android:id="@+id/patio2Button" android:text="Patio 2"/>
        <Button android:id="@+id/patio3Button" android:text="Patio 3"/>
        <Button android:id="@+id/patio4Button" android:text="Patio 4"/>
        <Button android:id="@+id/patio5Button" android:text="Patio 5"/>
        <Button android:id="@+id/patio6Button" android:text="Patio 6"/>
        <Button android:id="@+id/patio7Button" android:text="Patio 7"/>

        <Button android:id="@+id/userManagementButton" android:text="Usuarios"/>
    </GridLayout>
</LinearLayout>

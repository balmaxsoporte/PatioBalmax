<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MapaEstacionamiento">

    <TextView
        android:id="@+id/tvTituloPatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione un Patio"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnPatio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patio 1"/>

    <Button
        android:id="@+id/btnPatio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patio 2"/>

    <Button
        android:id="@+id/btnAdministrarUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Administrar Usuarios"/>
</LinearLayout>
